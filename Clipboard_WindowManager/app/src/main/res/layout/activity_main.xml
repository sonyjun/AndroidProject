<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/main_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="클립보드에 저장할 값을 입력하세요."></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/main_textView_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복사한 내용이 여기에 표시됩니다."
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:padding="10dp">

        <Button
            android:id="@+id/main_btn_copy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="복사"></Button>

        <Button
            android:id="@+id/main_btn_paste"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="붙여넣기"></Button>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="이 서비스를 시작하면 \n 클립보드의 클립의 변경을 감지합니다.\n 변경을 감지하면 최상위 다이얼로그가 뜹니다.">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:padding="10dp">

        <Button
            android:id="@+id/main_btn_window_startService"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="서비스 시작"></Button>

        <Button
            android:id="@+id/main_btn_window_endService"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="서비스 종료"></Button>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="이 서비스를 시작하면 \n 클립보드의 클립의 변경을 감지합니다.\n 변경을 감지하면 진동이 울리게 됩니다.">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:padding="10dp">

        <Button
            android:id="@+id/main_btn_vib_startService"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="서비스 시작"></Button>

        <Button
            android:id="@+id/main_btn_vib_endService"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="서비스 종료"></Button>
    </LinearLayout>

</LinearLayout>